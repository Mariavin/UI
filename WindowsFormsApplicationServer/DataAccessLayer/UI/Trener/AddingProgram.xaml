        <Label x:Name="label" Content="Курс" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top" Width="120" FontStyle="Italic"/>
        <Label x:Name="label2" Content="Цена" HorizontalAlignment="Left" Margin="19,115,0,0" VerticalAlignment="Top" FontStyle="Italic" Width="118" Height="28"/>
        <Label x:Name="label3" Content="Описание" HorizontalAlignment="Left" Margin="174,69,0,0" VerticalAlignment="Top" Width="103" FontStyle="Italic"/>
        <Button x:Name="button1" Content="Перейти к программам" HorizontalAlignment="Left" Margin="273,209,0,0" VerticalAlignment="Top" Width="136" Click="button1_Click" Height="22" Background="CornflowerBlue"/>

    </Grid>
</Window>
